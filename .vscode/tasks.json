{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure Cmake + Ninja (Debug)",
      "type": "shell",
      "command": "cmake -S . -B build-ninja/debug -G Ninja -DCMAKE_BUILD_TYPE=Debug -DCMAKE_C_COMPILER=clang -DCMAKE_CXX_COMPILER=clang++",
      "problemMatcher": []
    },
    {
      "label": "Build (Debug)",
      "type": "shell",
      "command": "cmake --build build-ninja/debug -- -j12",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Configure Cmake + Ninja (Release)",
      "type": "shell",
      "command": "cmake -S . -B build-ninja/release -G Ninja -DCMAKE_BUILD_TYPE=Release -DCMAKE_C_COMPILER=clang -DCMAKE_CXX_COMPILER=clang++",
      "problemMatcher": []
    },
    {
      "label": "Build (Release)",
      "type": "shell",
      "command": "cmake --build build-ninja/release -- -j12",
      "group": {
        "kind": "build"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}